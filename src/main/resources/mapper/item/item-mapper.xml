<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.kh.finalProject.item.model.dao.ItemDao">
	<resultMap type="item" id="itemMap" ></resultMap>

	<select id="selectPacList" resultMap="itemMap">
		select *
		from item
		where ITEM_PAC = 1
	</select>
	
	<select id="selectOnePac" resultMap="itemMap">
	select *
	  from item
	 where ITEM_NO =#{itemNo}
	</select>

<!-- 상품페이지 리스트 -->
	<select id="selectitemList" resultMap="itemMap">
		select *
		from item
		where ITEM_PAC = 0
		ORDER BY ITEM_NO DESC	
	</select>
	
	<select id="selectOneitem" resultMap="itemMap">
	select *
	  from item
	 where ITEM_NO =#{itemNo}
	</select>
	
	<select id="findItemsByCategory" resultMap="itemMap">
    SELECT *
    FROM item
    WHERE ITEM_SECTOR LIKE '%' ||  #{category} || '%'
    	  and ITEM_PAC = 0
    ORDER BY ITEM_NO DESC
    </select>
    
	<insert id="insertPac">
	insert into
	  item
	values (
		SQL_ITEM.nextval,
		#{itemSector},
		#{itemName},
		#{itemPrice},
		#{itemContent},
		#{itemLocal},
		#{itemCount},
		1,
		#{itemLogo}
	)
	</insert>

	<insert id="insertItem">
	insert into
	  item
	values (
		SQL_ITEM.nextval,
		#{itemSector},
		#{itemName},
		#{itemPrice},
		#{itemContent},
		#{itemLocal},
		#{itemCount},
		0,
		#{itemLogo}
	)
	</insert>
	
	<!-- 삭제하기 -->
	<delete id="deleteItem">
	    DELETE
	      FROM item 
	     WHERE ITEM_NO = #{itemNo}
	</delete>
</mapper>